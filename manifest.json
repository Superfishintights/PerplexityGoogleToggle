  {
    "manifest_version": 3,
    "name": "Perplexity - ChatGPT - Google Toggle",
    "version": "2.0",
    "description": "Switches between Perplexity and Google search.",
    "permissions": ["webNavigation", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "host_permissions": ["*://*.google.com/*", "https://chatgpt.com/*"],
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["chatgpt_inject.js"]
      }
    ]
  }
  